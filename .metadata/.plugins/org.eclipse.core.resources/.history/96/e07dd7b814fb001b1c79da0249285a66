package main;

import java.util.Scanner;
class Converters
{
	public static void main(String arg[])	
	{
	    double m,y,f,i,c;
             	    Scanner scan=new Scanner(System.in);
	    System.out.println("Please select an option: \n 1.Miles to Yards \n 2.Yards to Feet \n 3.Feet to Inches \n 4.Inches to centimeters \n 5. Kilometers to Miles \n 6. Quit");
                   int menuSelection=scan.nextInt();
                   boolean quit=false;
                   
	    do { 
	    switch(menuSelection)
	    {
	    case 1:  System.out.println("Enter Fahrenheit temperature");
                   	  f=scan.nextDouble();
	    	  c=(f-32)*5/9;
	    	  System.out.println("Celsius temperature is = "+c);
		  break;
	    case 2:  System.out.println("Enter  Celsius temperature");
                   	  c=scan.nextDouble();
	    	  f=((9*c)/5)+32;
	    	  System.out.println("Fahrenheit temperature is = "+f);
		  break;
	    case 3:  System.out.println("Enter Miles");
     	  		      m=scan.nextDouble();
     	  	  km=m*8/5;
     	  		 System.out.println("The answer in kilometers is = "+km);
     	  		 break;
	    case 4:  System.out.println("Enter Miles");
		      m=scan.nextDouble();
	         km=m*8/5;
		 System.out.println("The answer in kilometers is = "+km);
		 break;
	    case 5:  System.out.println("Enter Miles");
	      m=scan.nextDouble();
            km=m*8/5;
	     System.out.println("The answer in kilometers is = "+km);
	     break;
	    case 6:  
	     quit=true;	
		 break;
	    default:  System.out.println("please choose valid choice");
	    scan.close();
	    }  
	}while(!quit); 
}
}
